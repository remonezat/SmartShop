
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title{   فواتير المخزن   }

<div class="col-10">

    <div class="container">
     

        <div class="form">
            <div class="formTitle">
                <h4>
                    <i class="fa-solid fa-circle-plus"></i>
                    فواتير المخزن
                </h4>
            </div>


            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">فواتير تحت التحضير</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">فواتير تم التجهيز</button>
                </li>

            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">



                    <table class="table table-bordered mt-4 ">
                        <thead>
                          
                            <tr>
                                <td> رقم </td>
                                <td> عرض</td>


                            </tr>

                        </thead>

                        <tbody>
                            @if (ViewBag.CurrentBills != null)
                            {
                                foreach (var item in ViewBag.CurrentBills )
                                {
                                    <tr>
                                        <td>  @item.Id</td>


                                        <td><a href="/StoreBills/ShowBill/@item.Id"><i class='fas fa-eye text-success text-size-sm'></i></a></td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>



                </div>
                <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">

                    <table class="table table-bordered mt-4 ">
                        <thead>
                            <tr>
                                <td> رقم </td>
                                <td> عرض</td>
                            </tr>
                        </thead>

                        <tbody>
                            @if (ViewBag.ConfirmedBills != null)
                            {
                                foreach (var item in ViewBag.ConfirmedBills )
                                {
                                    <tr>
                                        <td>  @item.Id</td>


                                        <td><a href="/StoreBills/ShowConfirmedBill/@item.Id"><i class='fas fa-eye text-success text-size-sm'></i></a></td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>




                </div>

            </div>
        </div>
    </div>



</div>

