                    { ID: id },
                    function (data) {
                        $("#billtable").empty();
                        document.getElementById("FinalTotal").value = 0;
                        document.getElementById("TQ").value = 0;
                        document.getElementById("Icount").value = 0;
                        document.getElementById("RPaied").value = 0;

                        $.each(data,
