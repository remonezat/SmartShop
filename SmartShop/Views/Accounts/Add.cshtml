@{   
 Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title{  تسجيل حساب جديد      }

<div class="col-10">

    <div class="container">

        <div class="form">
            <div class="formTitle">
                <h4>
                    <i class="fa-solid fa-circle-plus"></i>
                    تسجيل حساب جديد
                </h4>
            </div>
            @using (Html.BeginForm("Add", "Accounts", FormMethod.Post))
            {

                <div class="row">
                    <div class="col-6">
                        <h6>الاسم  </h6>
                        <input class="form-control text-center" required type="text" name="AccName" placeholder="........">

                    </div>



                    <div class="col-6">
                        <h6>الهاتف </h6>
                        <input class="form-control text-center"  type="text" name="AccPhone" placeholder="  ........">





                    </div>
                </div>


                <div class="fullWidth">
                    <h6>العنوان </h6>
                    <input class=" w-100 form-control text-center" name="AccAddress" type="text" placeholder="........................" />

                </div>

                <h6>نوع الحساب</h6>

                <div class="row ">
                    <div class="col-4">
                        <input type="radio" name="AccType" value="c" checked>
                        <label for="">عميل</label>
                    </div>

                    <div class="col-4">
                        <input type="radio" name="AccType" value="s" >
                        <label for="">مورد</label>
                    </div>

                    <div class="col-4">
                        <input type="radio" name="AccType" value="b">
                        <label for="">عميل و مورد</label>
                    </div>
                </div>

                <button class="btn btn-primary" type="submit">تسجيل</button>

            }





        </div>








    </div>





</div>
<input type="text" id="Save" name="Save" hidden="hidden" value="@ViewBag.SuccessMessage" />
<input type="text" id="Error" name="Error" hidden="hidden" value="@ViewBag.DeleteMessage" />
@section scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        if ((document.getElementById('Save').value) != "Empty") {
            swal("", document.getElementById('Save').value, "success");

        }
        if ((document.getElementById('Error').value) != "Empty") {
            swal("", document.getElementById('Error').value, "error");

        }
    </script>

}